<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:m="urn:import:gwt.material.design.client.ui"
			 xmlns:p='urn:import:com.vaadin.polymer.paper.widget'
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.btn{
			width: 150px;
		}
	</ui:style>
	<m:MaterialPanel>
		<m:MaterialModalContent>
			<m:MaterialTextBox placeholder="Nom" ui:field="nom"/>
			<m:MaterialTextBox placeholder="Numero" ui:field="numero"/>
			<m:MaterialTextBox type="email" ui:field="email" placeholder="Email"/>
		</m:MaterialModalContent>
		
		<m:MaterialModalFooter align="RIGHT">
			<m:MaterialButton ui:field="btnAgree" waves="GREEN" type="FLAT" text="Valider" addStyleNames="{style.btn}" />
			<m:MaterialButton ui:field="btnDisagree" waves="RED" type="FLAT" text="Annuler" addStyleNames="{style.btn}" />
		</m:MaterialModalFooter>
	</m:MaterialPanel>
</ui:UiBinder> 