<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:p='urn:import:com.vaadin.polymer.paper.widget' >
	
		
	<ui:style>
		
		.table{
			width: 100%;
		}
		.panelPager{
			display: inline-block;
		}
		.grid{
			padding: 10px;
		}
		.menuItems{
			margin: 20px 20px 0px 40px;
		}
		
		.headerItems{
			padding: 20px 20px 0px 20px;
		}
		
		header {
		padding-left: 500px;
		

	} 
	</ui:style>
	
		
	<g:HTMLPanel>
		<style is='custom-style'>
			.pos{
				margin-left: 80%;
			}
			.material-icons{
			vertical-align: middle;
			margin-right: 10px;
			}
			.dropdown-content {
			    right: 25px;
			    top: 55px;
			}
		</style>
		
		<m:MaterialRow addStyleNames="card">		
			<m:MaterialRow>
		        <m:MaterialLabel text=" Gestion des AVIS" fontSize="1.5" addStyleNames="{style.headerItems} left"/>
		        <m:MaterialIcon addStyleNames="{style.headerItems} right"/>
		        <m:MaterialIcon icon="apps" tooltip="Menu" activates="dp-4" waves="default" size="small" addStyleNames="{style.menuItems} right" />
		        <m:MaterialDropDown name="dp-4" belowOrigin="false" constraintWidth="false">
			        <m:MaterialLink ui:field="mots_cles" fontSize="0.7" text="Ajouter Mot clÃ©" textColor="black" waves="default" icon="add_circle" size="small" separator="true" />
			        <m:MaterialLink ui:field="modifier" fontSize="0.7" text="Modifier Avis" textColor="black" waves="default" icon="mode_edit" size="small" separator="true"/>
			        <m:MaterialLink ui:field="supprimer" fontSize="0.7" text="Supprimer Avis" textColor="black" waves="default" icon="delete" size="small" separator="true"/>
			    </m:MaterialDropDown>
		        <m:MaterialIcon ui:field="avisForm" tooltip="Ajouter Avis" icon="add_circle" waves="default" textColor="red" size="small" addStyleNames="{style.menuItems} right"/>
		        <m:MaterialTextBox placeholder="Search" addStyleNames="right"/>
		        <m:MaterialIcon tooltip="Rechercher" waves="default" icon="search" size="small" addStyleNames="{style.menuItems} right" />		        
		    </m:MaterialRow>
			<m:MaterialRow addStyleNames="card">
				<g:SimplePanel ui:field="gridPanel"  />	
				<g:SimplePanel ui:field="pagerPanel" addStyleNames="{style.panelPager} right"/>	
			</m:MaterialRow>			
		</m:MaterialRow>		
	</g:HTMLPanel>
</ui:UiBinder> 